r = 0
w = 0
print("Введите перевод слова")
question = ["მწვანე - [мцване]","ყვითელი - [квители]","ლურჯი - [лурджи]","რუხი - [рухи]","ცისფერი - [окроспери]"]
answer = ["зеленый", "желтый", "синий", "серый", "золотистый"]
for i in range(len(question)):
    print(question[i])
    answer1=input("Перевод:")
    if answer1 == answer[i]:
        print("Верно\n")
        r+=1
    else:
        print("Неверно\n")
        w+=1
print(f"Правильных ответов: {r}, неправильных ответов: {w}.")

